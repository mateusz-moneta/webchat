{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@webchat/api/auth": ["libs/api/auth/src/index.ts"],
      "@webchat/api/conversations": ["libs/api/conversations/src/index.ts"],
      "@webchat/api/database": ["libs/api/database/src/index.ts"],
      "@webchat/api/messages": ["libs/api/messages/src/index.ts"],
      "@webchat/api/users": ["libs/api/users/src/index.ts"],
      "@webchat/api/users-database": ["libs/api/users-database/src/index.ts"],
      "@webchat/webchat/auth-data-access": [
        "libs/webchat/auth-data-access/src/index.ts"
      ],
      "@webchat/webchat/login-feature": [
        "libs/webchat/login-feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
